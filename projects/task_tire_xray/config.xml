<View style="display: flex;">
  <View style="padding: 0em 1em; background: #f1f1f1; margin-right: 1em; border-radius: 3px">
    <View style="position: sticky; top: 0">
        <View style="height: 100px; width: 300px; overflow: auto;">
         <Text name="url_text" value="$image" granularity="symbol" highlightColor="#ff0000" />
        </View>
      
        <Header value="결함 박스 타입"/>
        <RectangleLabels name="box_label" toName="image" opacity="0.6" strokeColor="red" strokeWidth="2">
            <Label value="all" background="red"/>
            <Label value="parital" background="blue"/>
            <Label value="f-type" background="green"/>
        </RectangleLabels>
      
        <Header value="결함 경계면 타입" />
        <PolygonLabels name="seg_label" toName="image"
                 strokeWidth="3" pointSize="small"
                 opacity="0.9">
            <Label value="impurity" hotkey="q" background="red"/>
            <Label value="bubble" hotkey="w" background="blue" />
            <Label value="wire" hotkey="e" background="green" />
        </PolygonLabels>


    </View>
  </View>
  <Image name="image" value="$image" style="flex-grow: 1" width="100%" maxWidth="30000px" zoom="true" zoomControl="true"/>

</View>
