<View style="display: flex;">
  <View style="padding: 0em 1em; background: #f1f1f1; margin-right: 1em; border-radius: 3px">
    <View style="width: 300px; position: sticky; top: 0">

        <Header value="각 텍스트 박스를 클릭한 후"/>
        <Header value="계층 정보를 선택해주세요" />
        <HyperText name="full_url" value="$full_url"/>
        <Text name="item_name" value="$item_name"/>


        <RectangleLabels name="major" toName="image" opacity="0.6" strokeColor="red" strokeWidth="2">
            <Label value="H1"/>
            <Label value="H2"/>
            <Label value="H3"/>
            <Label value="p"/>
            <Label value="no-tag"/>
        </RectangleLabels>

    </View>
  </View>
  <Image name="image" value="$image" style="flex-grow: 1" width="100%" maxWidth="30000px" zoom="true"/>

</View>
